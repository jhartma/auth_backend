{
  "name": "node.js",
  "version": "0.0.31",
  "main": "dist/src/server/main.js",
  "license": "MIT",
  "scripts": {
    "ts:compile": "npx rimraf dist && npx tsc --project ./tsconfig.json --watch",
    "ts:run": "npx nodemon ./dist/src/main.js",
    "build": "(cd ./docker && docker-compose -f docker-compose.prod.yml build auth)",
    "build:dev": "(cd ./docker && docker-compose build test)",
    "build:test": "(cd ./docker && docker-compose -f docker-compose.test.yml build test)",
    "dev:resetDb": "docker exec -it auth_backend /bin/bash -c 'node_modules/.bin/babel-node ./db/scripts/resetDb.js'",
    "dev:seed": "docker exec -it auth_backend /bin/bash -c 'node_modules/.bin/babel-node ./db/scripts/seed.js'",
    "dev:start": "(cd ./docker && docker-compose up)",
    "dev:stop": "(cd ./docker && docker-compose down)",
    "ops:run:prod": "node_modules/.bin/babel-node src/server/main.js",
    "ops:run": "npx concurrently \"yarn run ts:compile\" \"yarn run ts:run\" ",
    "test:setup": "(cd ./docker && docker-compose -f docker-compose.test.yml up)",
    "test:all": "node_modules/.bin/jest --runInBand --no-cache -t @ready",
    "test:dev": "node_modules/.bin/jest --watch --runInBand --no-cache -t @dev",
    "test:new": "node_modules/.bin/jest --watch --runInBand --no-cache"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.19",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.17.1",
    "connect-mongodb-session": "^1.3.0",
    "cookie-parser": "^1.4.3",
    "crypto": "1.0.1",
    "express": "^4.15.2",
    "express-brute": "^1.0.1",
    "express-brute-mongo": "^1.0.0",
    "express-session": "^1.15.2",
    "fetch-cookie": "^0.6.0",
    "isemail": "3.0.0",
    "mongodb": "^3.0.1",
    "mongoose": "4.13.8",
    "nodemailer": "^4.0.1",
    "passport": "0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth20": "^1.0.0",
    "passport-local": "^1.0.0",
    "ramda": "0.25.0",
    "secure-password": "^3.0.0",
    "uuid": "^3.0.1",
    "winston": "^2.4.0",
    "winston-mongodb": "4.0.0-rc1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.0",
    "@types/express-brute": "^0.0.36",
    "@types/express-brute-mongo": "^0.0.34",
    "@types/express-session": "^1.15.6",
    "@types/mongoose": "^4.7.32",
    "@types/node": "^8.5.4",
    "@types/nodemailer": "^4.3.1",
    "@types/passport": "^0.4.2",
    "@types/ramda": "^0.25.13",
    "@types/serve-static": "^1.13.1",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.7",
    "babel-cli": "^6.24.1",
    "babel-jest": "^22.0.4",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babel-watch": "^2.0.6",
    "chai": "4.0.2",
    "chai-as-promised": "7.1.1",
    "concurrently": "^3.5.1",
    "jest": "^22.0.4",
    "mail-listener2": "^0.3.1",
    "mocha": "4.1.0",
    "node-env-file": "0.1.8",
    "node-fetch": "^1.6.3",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/?(*)_spec.(ts|tsx|js)"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "cache": false,
    "moduleNameMapper": {
      "^mongoose$": "<rootDir>/node_modules/mongoose"
    },
    "setupFiles": [
      "./__tests__/_helpers/init.js",
      "./dist/src/db/index.js",
      "./dist/src/db/lib/resetDb.js"
    ]
  }
}
